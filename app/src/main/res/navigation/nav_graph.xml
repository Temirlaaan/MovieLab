<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/moviesFragment">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.example.movielab.navigation.MovieFragment"
        tools:layout="@layout/fragment_movies">

        <action
            android:id="@+id/from_moviesFragment_to_genresFragment"
            app:destination="@+id/genresFragment"/>

    </fragment>


    <fragment
        android:id="@+id/genresFragment"
        android:name="com.example.movielab.navigation.GenresFragment"
        android:label="fragment_genres"
        tools:layout="@layout/fragment_genres" >

        <action
            android:id="@+id/from_genresFragment_to_savesFragment"
            app:destination="@+id/savesFragment"/>


    </fragment>

    <fragment
        android:id="@+id/savesFragment"
        android:name="com.example.movielab.navigation.SavedFragment"
        android:label="fragment_saves"
        tools:layout="@layout/fragment_saves" />

</navigation>